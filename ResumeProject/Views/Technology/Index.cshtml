@using ResumeProject.Models
@model List<TBLTechnology>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Teknoloji Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Değer</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@item.TechnologyId</td>
            <td>@item.TechnologyTitle</td>
            <td>@item.TechnologyCalue</td>
            <td><a href="/Technology/DeleteTechnology/@item.TechnologyId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Technology/UpdateTechnology/@item.TechnologyId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Technology/AddTechnology/" class="btn btn-info">Yeni Teknoloji Ekle</a>

