@model ResumeProject.Models.TBLCategory
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <label>Kategori ID</label>
    @Html.TextAreaFor(m => m.CategoryID, new { @class = "form-control" })

    <br />
    <label>Kategori Adı</label>
    @Html.TextAreaFor(m => m.CategoryName, new { @class = "form-control" })

    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>

