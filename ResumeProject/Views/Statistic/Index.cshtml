
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>İstatistik Sayfası</h2>
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container">
        <div class="card">
            <div class="card-body">Proje Sayısı : @ViewBag.CountProjeTalebi</div>
        </div>
        <br>
        <div class="card bg-primary text-white">
            <div class="card-body">Bilinen programlama dili sayısı: @ViewBag.TechnologyCount</div>
        </div>
        <br>
        <div class="card bg-success text-white">
            <div class="card-body">C# Dili Oranı : @ViewBag.csharpValue</div>
        </div>
        <br>
        <div class="card bg-info text-white">
            <div class="card-body">Toplam Mesaj Sayısı: @ViewBag.ContactCount</div>
        </div>
        <br>
        <div class="card bg-warning text-white">
            <div class="card-body">Teşekkür Mesaj Sayısı @ViewBag.SubjectTesekkur</div>
        </div>
        <br>
        <div class="card bg-danger text-white">
            <div class="card-body">Teknoloji Değeri Toplam : @ViewBag.SumTechnologyValue</div>
        </div>
        <br>
        <div class="card bg-secondary text-white">
            <div class="card-body">Teknoloji Değeri Ortalama : @ViewBag.AvarageTechnologyValue</div>
        </div>
        <br>
        <div class="card bg-dark text-white">
            <div class="card-body">İd si 3 olan : @ViewBag.GetBy3Id</div>
        </div>
        <br>
        <div class="card bg-light text-dark">
            <div class="card-body">En büyük teknoloji değeri : @ViewBag.MaxTechnologyValue</div>
        </div>
    </div>

</body>
</html>


